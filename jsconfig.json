{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "paths": {
            "~components/*": ["src/components/*"],
            "~components": ["src/components"],
            "~theme/*": ["src/theme/*"],
            "~theme": ["src/theme"],
            "~containers": ["src/containers"],
            "~containers/*": ["src/containers/*"],
            "~context": ["src/context"],
            "~context/*": ["src/context/*"],
            "~hooks": ["src/hooks"],
            "~hooks/*": ["src/hooks/*"],
            "~svg/*": ["src/assets/svg/*"],
            "~styled": ["src/assets/svg"],
            "~data/*": ["data/*"],
            "~data": ["data"],
            "~utils/*": ["src/utils/*"],
            "~utils": ["src/utils"],
            "@/*": ["node_modules/*"],
            "@": ["node_modules"],
        },
    }
}